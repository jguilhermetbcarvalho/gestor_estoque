<!doctype html>
<html lang="pt-br" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login - Auto Elétrica Amapá</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="../../assets/images/favicon.ico">

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="../../assets/css/core/libs.min.css">


    <!-- Hope Ui Design System Css -->
    <link rel="stylesheet" href="../../assets/css/hope-ui.min.css?v=4.0.0">

    <!-- Custom Css -->
    <link rel="stylesheet" href="../../assets/css/custom.min.css?v=4.0.0">

    <!-- Dark Css -->
    <link rel="stylesheet" href="../../assets/css/dark.min.css">

    <!-- Customizer Css -->
    <link rel="stylesheet" href="../../assets/css/customizer.min.css">

    <!-- RTL Css -->
    <link rel="stylesheet" href="../../assets/css/rtl.min.css">

    <!-- Style Personalizado-->
    <link rel="stylesheet" href="~/assets/css/style_button.css">

    <link rel="stylesheet" href="~/assets/css/style_card.css">

    <link rel="stylesheet" href="~/assets/css/style_modal.css">

    <link rel="stylesheet" href="~/assets/css/style_pers.css">

    <link rel="stylesheet" href="~/assets/css/style_table.css">

    <link rel="stylesheet" href="~/assets/css/style_table_carrinho.css">

    <link rel="stylesheet" href="~/assets/css/style_table_codbarras.css">

    <link rel="stylesheet" href="~/assets/css/style_table_devolvido.css">

    <link rel="stylesheet" href="~/assets/css/style_table_entregue.css">

    <link rel="stylesheet" href="~/assets/css/style_table_pendente.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<body class=" ">
    @RenderBody()

    <!-- loader Start -->
    <div id="loading">
        <div class="loader simple-loader">
            <div class="loader-body">
            </div>
        </div>
    </div>
    <!-- loader END -->

    <div class="wrapper">
        <section class="login-content">
            <div class="row m-0 align-items-center vh-100" style="background:#7D859B">
                <div class="col-md-6">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="card card-transparent d-flex justify-content-center mb-0 auth-card style-card" style="box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);">
                                <div class="card-body">
                                    <div class="navbar-brand d-flex align-items-center mb-3">

                                        <!--Logo start-->
                                        <div class="logo-main">
                                            <div class="logo-normal">
                                                <img src="~/assets/images/brands/raio2.png" alt="Auto Elétrica Amapá" class="icon-35 text-primary">
                                            </div>
                                            <div class="logo-mini">
                                                <img src="~/assets/images/brands/raio2.png" alt="Auto Elétrica Amapá" class="icon-30 text-primary">
                                            </div>
                                        </div>
                                        <!--logo End-->
                                        <h4 class="logo-title ms-3" style="color:#000030;">Auto Elétrica Amapá</h4>

                                    </div>
                                    <form autocomplete="off" asp-controller="Login" asp-action="Index" class="card-login">
                                        <div class="row">
                                            <ul class="col-lg-12" style="list-style-type: none;">
                                                <li class="form-group">
                                                    <label for="empresa" class="form-label">Empresa</label>
                                                    <select required class="form-select custom-input " asp-items="@ViewBag.empresa" name="empresa">
                                                    </select>
                                                </li>

                                                <li class="form-group">
                                                    <label for="filial" class="form-label">Filial</label>
                                                    <select required class="form-select custom-input" asp-items="@ViewBag.filial" name="filial">
                                                    </select>
                                                </li>

                                                <li class ="form-group">
                                                    <label id="login" name="login" for="login" class="form-label">Login</label>
                                                    <select class="form-select custom-input" asp-items="@ViewBag.usuarios" name="login">
                                                        <option></option>
                                                    </select>
                                                </li>

                                                <li class="form-group">
                                                    <label for="password" class="form-label">Senha</label>
                                                    <input type="password" name="senha" id="senha" class="form-control custom-input">
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary">Entrar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-md-block d-none bg-primary p-0 mt-n1 vh-100 overflow-hidden">
                    <img src="~/assets/images/brands/car.png" class="img-fluid gradient-main" alt="images">
                </div>
            </div>
        </section>
    </div>

    <!-- Library Bundle Script -->
    <script src="../../assets/js/core/libs.min.js"></script>

    <!-- External Library Bundle Script -->
    <script src="../../assets/js/core/external.min.js"></script>

    <!-- Widgetchart Script -->
    <script src="../../assets/js/charts/widgetcharts.js"></script>

    <!-- mapchart Script -->
    <script src="../../assets/js/charts/vectore-chart.js"></script>
    <script src="../../assets/js/charts/dashboard.js"></script>

    <!-- fslightbox Script -->
    <script src="../../assets/js/plugins/fslightbox.js"></script>

    <!-- Settings Script -->
    <script src="../../assets/js/plugins/setting.js"></script>

    <!-- Slider-tab Script -->
    <script src="../../assets/js/plugins/slider-tabs.js"></script>

    <!-- Form Wizard Script -->
    <script src="../../assets/js/plugins/form-wizard.js"></script>

    <!-- AOS Animation Plugin-->
    <!-- App Script -->
    <script src="../../assets/js/hope-ui.js" defer></script>

    <script src="~/assets/js/script.js"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")


</body>
</html>

<script>
    function redirecionarAtalhoTeclado(tecla, destino) {
        document.addEventListener("DOMContentLoaded", function () {
            document.addEventListener("keydown", function (event) {
                if (event.altKey && event.key === tecla) {
                    window.location.href = destino;
                    event.preventDefault();
                }
            });
        });
    }

    redirecionarAtalhoTeclado("o", "/Produto/VisaoGeral"); // Controle
    redirecionarAtalhoTeclado("p", "/Produto/ProdutoPendente"); // Pendente
    redirecionarAtalhoTeclado("e", "/Produto/ProdutoEntregue"); // Entregue
    redirecionarAtalhoTeclado("c", "/Produto/ProdutoCarrinho"); // Carrinho
    redirecionarAtalhoTeclado("d", "/Produto/ProdutoDevolvido"); // Devolvido
    redirecionarAtalhoTeclado("u", "/Login/ConfigLogin"); // Config. Login
    redirecionarAtalhoTeclado("b", "/Produto/VerifCodBarras"); // Verif. Cod. Barras
    redirecionarAtalhoTeclado("i", "/Produto/TeclasAtalho"); // Teclas de atalho
</script>