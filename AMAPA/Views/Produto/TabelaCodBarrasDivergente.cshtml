@model IList<AMAPA.Models.CodBarrasDivergente>

<table class="table table-striped table-hover" data-toggle="data-table">
    <thead>
        <tr>
            <th class="text-center"> Data </th>
            <th class="text-center"> Id Produto </th>
            <th class="text-center"> Cod. Barras Gestor </th>
            <th class="text-center"> Localização </th>
            <th class="text-center"> Confirmar Alteração </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.DATAHORA</td>
                <td>@produto.ID_PRODUTO</td>
                <td>@produto.COD_BARRAS_GESTOR</td>
                <td>@produto.LOCALIZACAO</td>
                <td>
                    <form asp-controller="Produto" asp-action="ConfirmarAlteracaoProduto" method="post" autocomplete="off">

                        <input type="hidden" name="idProduto" value="@produto.ID_PRODUTO"/>


                        <button type="submit" class="btn-submit" style="border: none; background: none; padding: 0;">
                            <svg class="icon-32 text-success" width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M16.3345 2.75024H7.66549C4.64449 2.75024 2.75049 4.88924 2.75049 7.91624V16.0842C2.75049 19.1112 4.63549 21.2502 7.66549 21.2502H16.3335C19.3645 21.2502 21.2505 19.1112 21.2505 16.0842V7.91624C21.2505 4.88924 19.3645 2.75024 16.3345 2.75024Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                <path d="M8.43994 12.0002L10.8139 14.3732L15.5599 9.6272" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            </svg>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>